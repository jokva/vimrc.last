set synmaxcol=200
set nrformats-=alpha
map <S-j> <C-d>
map <S-K> <C-u>
let g:ctrlp_custom_ignore = {
    \ 'dir':  '\.git$\|build\|release',
    \ 'file': '\.orig'
    \ }
au FileType gitcommit setlocal tw=72
au BufNewFile,BufRead *.yaml,*.yml so $HOME/.vim/bundle/vim-yaml/after/syntax/yaml.vim
au BufNewFile,BufRead CMakeLists.txt setlocal syntax=cmake ft=cmake
